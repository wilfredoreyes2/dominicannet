<!DOCTYPE html>

<html>

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


<body>
    @*-----------------------------Aviso----------------------------------------------
          Para usar el navbar deben agregar la clase class="Search" al tr
          que esta dentro del bucle for de la tabla sino no podran filtrar.
        --------------------------------------------------------------------------------
    *@

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #141414">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Home")">MarketPlace</a>

            <div class="justify-content-center">

                <ul class="navbar-nav me-auto mb-1">
                    <li class="nav-item d-flex">



                        <form class="d-flex col-lg-12">
                            <input class="form-control me-lg-2" style="width:700px;" type="search" placeholder="Buscar Usuario" aria-label="Search" id="Search">
                        </form>
                    </li>

                </ul>
            </div>
            <form class="d-flex">
                <ul class="navbar-nav me-auto mb-1">

                    <li class="nav-item dropdown ml-auto d-lg-grid">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mi Perfil
                        </a>
                        <ul class="dropdown-menu m-2" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Mi cuenta</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("CerrarSesion", "Login")">Cerrar Sesión</a></li>
                        </ul>
                    </li>

                </ul>
            </form>
        </div>

    </nav>




    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderBody()

    @RenderSection("scripts", required: false)
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

