<!DOCTYPE html>

<html>

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


<body>
    <div id="barra">

        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #141414">
            <div class="container-fluid">

                @using (Html.BeginForm("MostrarProductos1", "Usuario", FormMethod.Post))
                {

                    <button type="submit" hidden id="BTNHOME"></button>
                    Session["Categoria"] = 0;
                }


                <script>

                    function Pulsar() {

                        document.querySelector('#BTNHOME').click();
                    }

                </script>

                <a class="navbar-brand" href="#" onclick="Pulsar()" style="position:relative; left:-120px;">MarketPlace</a>

                @using (Html.BeginForm("buscar_N", "Usuario", FormMethod.Post))
                {

                    Session["Categoria"] = 0;

                    <ul class="navbar-nav me-auto mb-1">
                        <li class="nav-item d-flex">


                            <form class="d-flex col-lg-12">
                                <input class="form-control me-lg-2" style="width:700px;" type="search" placeholder="Buscar Productos" aria-label="Search" name="Nombre">



                                <button class="btn btn-outline-light" type="submit">

                                    <svg xmlns="http://www.w3.org/2000/svg" height="21" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16" style="position:relative; top: -1px;">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>

                                    Buscar
                                </button>
                            </form>

                        </li>

                    </ul>
                }

                <form class="d-flex">
                    <ul class="navbar-nav me-auto mb-1">

                        <li class="nav-item dropdown ml-auto d-lg-grid">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                <svg xmlns="http://www.w3.org/2000/svg" height="22" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" style="color:azure; position: relative; top: -1.5px;">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                </svg>

                                @Session["NombreU"]

                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" style=" min-width: 10px;">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MiCuenta", "Usuario")">

                                        <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="currentColor" class="bi bi-person-square" viewBox="0 0 16 16" style="position:relative; top: -2px;">
                                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z" />
                                        </svg>

                                        Mi cuenta


                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Listadoproyectos", "usuario")">

                                        <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="currentColor" class="bi bi-columns-gap" viewBox="0 0 16 16" style="position:relative; top: -2px;">
                                            <path d="M6 1v3H1V1h5zM1 0a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V1a1 1 0 0 0-1-1H1zm14 12v3h-5v-3h5zm-5-1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1h-5zM6 8v7H1V8h5zM1 7a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H1zm14-6v7h-5V1h5zm-5-1a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h5a1 1 0 0 0 1-1V1a1 1 0 0 0-1-1h-5z" />
                                        </svg>

                                        Mis Productos
                                    </a>
                                </li>
                
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("CerrarSesion", "Login")">

                                        <svg xmlns="http://www.w3.org/2000/svg" height="24" fill="currentColor" class="bi bi-reply-all-fill" viewBox="0 0 16 16" style="position:relative; top: -2px;">
                                            <path d="M8.021 11.9 3.453 8.62a.719.719 0 0 1 0-1.238L8.021 4.1a.716.716 0 0 1 1.079.619V6c1.5 0 6 0 7 8-2.5-4.5-7-4-7-4v1.281c0 .56-.606.898-1.079.62z" />
                                            <path d="M5.232 4.293a.5.5 0 0 1-.106.7L1.114 7.945a.5.5 0 0 1-.042.028.147.147 0 0 0 0 .252.503.503 0 0 1 .042.028l4.012 2.954a.5.5 0 1 1-.593.805L.539 9.073a1.147 1.147 0 0 1 0-1.946l3.994-2.94a.5.5 0 0 1 .699.106z" />
                                        </svg>

                                        Cerrar Sesión
                                    </a>

                                </li>
                            </ul>
                        </li>

                    </ul>
                </form>


            </div>

        </nav>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderBody()

    @RenderSection("scripts", required: false)
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <footer style=" position: relative; bottom: 0px; width: 100%; background-color: #141414" class="py-5">

        @{
            DateTime date = DateTime.Now;
            string An = date.ToString("yyyy");
        }

        <div class="container"><h5 class="m-0 text-center text-white">MarketPlace &copy; @An</h5></div>


    </footer>
</body>
</html>

<style>

    #navbarDropdown {
        position: relative;
        top: 0px;
        left: -20px;
    }

    .dropdown-item:active {
        background-color: black;
    }

    #barra {
        position: relative;
        height: 70px;
    }
</style>