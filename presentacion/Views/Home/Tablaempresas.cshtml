@model IEnumerable<Capa_entidades.empresas>

@{
    ViewBag.Title = "Tablaempresas";
}

<div style="padding: 100px;" class="d-flex flex-column align-items-center">
    <h2>Tabla empresas</h2>

    <div style="width: 100%;" class="d-flex flex-row justify-content-end">
        <div style="margin: 5px;">@Html.ActionLink("AÑADIR", "Agregarempresas", "Home", new { @class = "btn btn-primary" })</div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_empresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modelo_negocio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.invercion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.porcentaje_participacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modelo_negocio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.invercion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.porcentaje_participacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_usuario)
            </td>
            <td>
                @{
                    if (item.Estado != 1)
                    {
                        <span>Deshabilitado</span>
                    }
                    else
                    {
                        <span>Habilitado</span>
                    }
                }
            </td>

            <td>
                @Html.ActionLink("EDITAR", "Editarempresas", new { id = item.ID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("DESHABILITAR", "Deshabilitarempresas", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }

</table>

