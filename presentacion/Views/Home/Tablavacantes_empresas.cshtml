@model IEnumerable<Capa_entidades.vacantes_empresas>

@{
    ViewBag.Title = "Tablaproyectos";
}

<div style="padding: 100px;" class="d-flex flex-column align-items-center">
    <h2>Tabla vacantes</h2>

    <div style="width: 100%;" class="d-flex flex-row justify-content-end">
        <div style="margin: 5px;">@Html.ActionLink("AÑADIR", "Agregarvacantes_empresas", "Home", new { @class = "btn btn-primary" })</div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vacante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descrpicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.puesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_EMPRESA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vacante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descrpicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_EMPRESA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @{
                    if (item.Estado != 1)
                    {
                        <span>Deshabilitado</span>
                    }
                    else
                    {
                        <span>Habilitado</span>
                    }
                }
            </td>

            <td>
                @Html.ActionLink("EDITAR", "Editarvacantes_empresas", new { id = item.ID }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("DESHABILITAR", "Deshabilitarvacantes_empresas", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }

</table>